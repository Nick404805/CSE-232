int middle(int x, int y, int z)
{
	if ((x < y && y < z) || (z < y && y < x))
	{
		return y;
	}
	else if ((x > y && x < z) || (z < x && x < y)) 
	{
		return x;
	}
	else if ( x>z && z > y || y > z && z > x) 
	{
		return z;
	}
}
