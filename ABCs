#include <iostream>
using std::cout;
using std::cin;
using std::endl;


int main()
{
	int n;
	cin >> n;
	for (int i = 1; i <= n; i++)
	{
		for (int x = 1; x <= n - i; x++) 
		{
			cout << " ";
		}
		for (int j = i; j > 0; j--)
		{
			cout  << static_cast<char>('A' + j - 1);
		}
		for (int j = 2; j <= i; j++)
		{
			cout << static_cast<char>('A' + j - 1); 
		}
		cout << '\n';
	}
}

