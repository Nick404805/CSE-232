#include <iostream>
#include <string>

using std::cout;
using std::cin;
using std::string;
using std::getline;

int main()
{
	string str;
	int n;
	getline(cin, str);
	cin >> n;
	for (auto i = 0; i < str.length(); i += n)  
	{
		str[i] = toupper(str[i]); 
	}
	cout << str;
}
/*
* //http://www.cplusplus.com/forum/beginner/193461/
* //https://www.cplusplus.com/reference/cctype/toupper/
