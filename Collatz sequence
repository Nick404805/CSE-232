#include <iostream>
#include <string>
using std::cout;
using std::cin;
using std::endl;

int main()
{
	int num;
	int count = 0;
	cin >> num;
	while (num != 1) 
	{
		if (num % 2 == 0) 
		{
			num = num / 2; 
			count++; 
		}
		else if (num % 2 != 0)
		{
			num = (num * 3) + 1;
			count++;
		} 
		cout << num << " ";
	}
	cout << "\n" << count;
	
}
/*
* //https://en.wikipedia.org/wiki/Collatz_conjecture
*/
