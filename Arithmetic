#include <iostream>
#include <string>
using std::cout;
using std::cin;
using std::string;

int main()
{
	string str;
	cin >> str;
	char &c = str.back();
	char &x = str.front();
	c = toupper(c); 
	x = toupper(x);
	cout << str << " " << str.length(); 
}

